<?xml version="1.0"?>
<openerp>
    <data>
        <template id="car_form">
            <form action="/" method="post" class="">
                <input type="hidden" value="Car"/>
                <div class="form-group form-inline">
                    <label for="date_from_car">From</label>
                    <input type="date" id="date_from_car" class="form-control"
                           placeholder="From"/>
                    <label for="date_to_car">To</label>
                    <input type="date" id="date_to_car" class="form-control" placeholder="To"/>
                </div>
                <div class="form-group form-inline">
                    <label for="input_people_car">Number of people</label>
                    <select class="form-control initial" id="input_people_car">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                        <option>7</option>
                        <option>8</option>
                        <option>9</option>
                        <option>10</option>
                        <option>more</option>
                    </select>
                </div>
                <div class="form-group form-inline">
                    <label for="input_car">Car type</label>
                    <select class="form-control initial" id="input_car">
                        <t t-foreach="cars" t-as="car">
                            <t t-set="car_id" t-value="car.id"/>
                            <option t-att-id="car_id" t-att-value="car_id ">
                                <t t-esc="car.name"/>
                            </option>
                        </t>
                    </select>
                </div>
                <button type="submit" class="btn btn-default">Search</button>
            </form>

        </template>
    </data>
</openerp>