<?xml version="1.0"?>
<openerp>
    <data>
        <template id="transfer_form">
            <form action="/" method="post" class="">
                <input type="hidden" value="Transfer"/>
                <div class="form-group form-inline">
                    <label for="input_destination_from">From:</label>
                    <select class="form-control initial" id="input_destination_from">
                        <t t-foreach="destination" t-as="dest">
                            <t t-set="dest_id" t-value="dest.id"/>
                            <option t-att-id="dest_id" t-att-value="dest_id ">
                                <t t-esc="dest.name"/>
                            </option>
                        </t>
                    </select>
                    <label for="input_destination_to">To:</label>
                    <select class="form-control initial" id="input_destination_to">
                        <t t-foreach="destination" t-as="dest">
                            <t t-set="dest_id" t-value="dest.id"/>
                            <option t-att-id="dest_id" t-att-value="dest_id ">
                                <t t-esc="dest.name"/>
                            </option>
                        </t>
                    </select>
                </div>
                <div class="form-group form-inline">
                    <label for="date_from_hotel">Date In:</label>
                    <input type="date" id="date_from_hotel" class="form-control"
                           placeholder="From"/>
                    <label for="date_to_hotel">Date Out:</label>
                    <input type="date" id="date_to_hotel" class="form-control"
                           placeholder="To"/>
                </div>
                <!--<div class="form-group">-->

                <!--</div>-->
                <div class="form-group form-inline">
                    <label for="input_transfer_type">Transfer Type:</label>
                    <select class="form-control initial" id="input_transfer_type">
                        <t t-foreach="transfers" t-as="transf">
                            <t t-set="transf_id" t-value="transf.id"/>
                            <option t-att-id="transf_id" t-att-value="transf_id ">
                                <t t-esc="transf.name"/>
                            </option>
                        </t>
                    </select>
                </div>
                <button type="submit" class="btn btn-default">Search</button>
            </form>
        </template>
    </data>
</openerp>